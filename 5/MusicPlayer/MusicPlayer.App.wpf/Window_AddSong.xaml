<Window x:Class="MusicPlayer.App.wpf.Window_AddSong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer.App.wpf"
        mc:Ignorable="d"
        Title="Добавить песню" Height="250" Width="400">
    <Grid>
        <Label Content="Новая песня:" HorizontalAlignment="Center" Margin="0,9,0,0" VerticalAlignment="Top"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="61,58,0,0" VerticalAlignment="Top"/>
        <Label Content="Исполнитель" HorizontalAlignment="Left" Margin="61,99,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBox_Title" HorizontalAlignment="Left" Margin="168,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
        <TextBox x:Name="TextBox_Artist" HorizontalAlignment="Left" Margin="168,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
        <Button x:Name="Btn_Cancel" IsCancel="True" Content="Отмена" HorizontalAlignment="Left" Margin="223,170,0,0" VerticalAlignment="Top" Height="27" Width="97"/>
        <Button x:Name="Btn_Add" Content="Добавить" HorizontalAlignment="Left" Margin="80,170,0,0" VerticalAlignment="Top" Height="27" Width="96" Click="Btn_Add_Click"/>

    </Grid>
</Window>
